<form asp-controller="TicketOrder" asp-action="Create" method="post">
     <img class="esh-catalog-thumbnail" src="@Model.PictureURL" />
    <div class="esh-catalog-name">
        <span>@Model.Name</span>
    </div>
    <div class="esh-catalog-price">
        <span>@Model.TicketPrice.ToString("N2")</span>
    </div>
     <div class="form-group grid-flex flex-row">
                        <label  class="">Quantity</label>
                        <input asp-for="@Model.TicketQuantity" class="form-control form-input" type="text" name="ticketQuantity" />
                    </div>
    <input class="esh-catalog-button" type="submit" value="Buy Tickets" />

    <input type="hidden" asp-for="@Model.Category" name="category" />
    <input type="hidden" asp-for="@Model.EventCategoryId" name="eventCategoryId" />
    <input type="hidden" asp-for="@Model.Place" name="place" />
    <input type="hidden" asp-for="@Model.EventPlaceId" name="eventPlaceId" />
    <input type="hidden" asp-for="@Model.Description" name="description" />
    <input type="hidden" asp-for="@Model.Id" name="id" />
    <input type="hidden" asp-for="@Model.Name" name="name" /> @*need*@
    @*TODO: this may need to be pictureUrl*@
    <input type="hidden" asp-for="@Model.PictureURL" name="pictureURL" />
    <input type="hidden" asp-for="@Model.TicketPrice" name="ticketPrice" /> @*need*@
</form>